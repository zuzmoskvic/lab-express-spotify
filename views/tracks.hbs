<link rel="stylesheet" href="/styles/style.css">

<div class="tracks-topdiv">
    <h1>Tracklist</h1>
    {{!-- <h1>{{name}}</h1> --}}
    {{!-- <h1>Search results: "{{ artist }}"</h1> --}}
</div>


<div class="tracks-div">
    {{#each tracks}}
    <div class="track-each-div">
        <div class="track1">
            <p>{{this.name}}</p>
        </div>
        <div class="track2">
            <audio controls src="{{this.preview_url}}">
                <a href="{{this.preview_url}}">
                    Play audio
                </a>
            </audio>
        </div>
        <br>
    </div>
    {{/each}}
</div>